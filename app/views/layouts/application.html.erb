<!DOCTYPE html>
<html>
  <head>
    <title>PqsTenders</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav>
   <div class="nav-wrapper">
     <a href="/" class="brand-logo">PQS Tenders</a>
     <ul id="nav-mobile" class="right hide-on-med-and-down">
       <li>
         <% if company_signed_in? %>
          <%= link_to current_company.company_name, root_url %>
         <% end %>
       </li>
       <li> <%= link_to 'Verify Company', company_verify_path(1) %> </li>
       <li> <%= link_to 'Apply Tender', tenders_path %> </li>
       <li> <%= link_to 'Admin', administration_index_path %> </li>
     </ul>
   </div>
 </nav>
  <body>
    <%= yield %>
  </body>
</html>
